<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="0.5dip" android:color="@color/red" />
            <corners android:topLeftRadius="12.5dip" android:topRightRadius="0.0dip" android:bottomLeftRadius="12.5dip" android:bottomRightRadius="0.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#fff5a4a4" />
            <stroke android:width="0.5dip" android:color="@color/red" />
            <corners android:topLeftRadius="12.5dip" android:topRightRadius="0.0dip" android:bottomLeftRadius="12.5dip" android:bottomRightRadius="0.0dip" />
        </shape>
    </item>
</selector>