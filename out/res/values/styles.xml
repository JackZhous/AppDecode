<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppMainTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="appTheme" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="dialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="ZKDialogStyle" />
    <style name="ZKDialogStyle.Background" parent="@style/ZKDialogStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/view_dialog_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40.0dip</item>
        <item name="android:layout_marginRight">40.0dip</item>
        <item name="android:minWidth">1000.0dip</item>
    </style>
    <style name="ZKDialogStyle.Title" parent="@style/ZKDialogStyle">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
    </style>
    <style name="ZKDialogStyle.HasTitleContent" parent="@style/ZKDialogStyle">
        <item name="android:scrollbarSize">3.0dip</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingTop">20.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:paddingBottom">20.0dip</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">55.0dip</item>
    </style>
    <style name="ZKDialogStyle.NoTitleContent" parent="@style/ZKDialogStyle">
        <item name="android:scrollbarSize">3.0dip</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">85.0dip</item>
    </style>
    <style name="ZKDialogStyle.ListView" parent="@style/ZKDialogStyle">
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@null</item>
        <item name="android:headerDividersEnabled">true</item>
    </style>
    <style name="ZKDialogStyle.TwoBtnContainer" parent="@style/ZKDialogStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/view_dialog_bottom_bg</item>
        <item name="android:paddingTop">@dimen/divider_height</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
    </style>
    <style name="ZKDialogStyle.OneBtnContainer" parent="@style/ZKDialogStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/view_dialog_bottom_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
    </style>
    <style name="ZKDialogStyle.OneBtn" parent="@style/ZKDialogStyle">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/gray_12</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/view_dialog_btn_one_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="ZKDialogStyle.LeftBtn" parent="@style/ZKDialogStyle">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/view_dialog_btn_left_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="ZKDialogStyle.RightBtn" parent="@style/ZKDialogStyle">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/view_dialog_btn_purple_right_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">@dimen/divider_height</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="DividerStyle.dialog" parent="@style/DividerStyle">
        <item name="android:background">@color/gray_2</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
    </style>
    <style name="anim_view">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>
    <style name="DividerStyle" />
    <style name="DividerStyle.vertical" parent="@style/DividerStyle">
        <item name="android:background">@color/gray_2</item>
        <item name="android:layout_width">@dimen/divider_height</item>
    </style>
    <style name="DividerStyle.horizontal" parent="@style/DividerStyle">
        <item name="android:background">@color/gray_2</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
    </style>
</resources>
