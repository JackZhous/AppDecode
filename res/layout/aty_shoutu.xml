                    <TextView android:textSize="@dimen/dimen_12dp" android:textColor="@color/zdy_red1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="（分享成功可获得1次额外抽奖机会）" />
                </LinearLayout>
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:paddingLeft="@dimen/dimen_10dp" android:paddingRight="@dimen/dimen_10dp" android:layout_width="fill_parent" android:layout_height="wrap_content">
