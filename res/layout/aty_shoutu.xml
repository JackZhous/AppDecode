                        </LinearLayout>
                        <ImageView android:layout_width="@dimen/dimen_20dp" android:layout_height="@dimen/dimen_20dp" android:src="@drawable/in_hui_icon" />
                    </LinearLayout>
                </LinearLayout>
                <TextView android:textSize="@dimen/dimen_12dp" android:gravity="center" android:padding="@dimen/dimen_10dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="方法一：长按图片保存，发送给朋友" />
                <FrameLayout android:background="@color/white" android:paddingTop="@dimen/dimen_10dp" android:paddingBottom="@dimen/dimen_10dp" android:clipChildren="false" android:layout_width="fill_parent" android:layout_height="@dimen/dimen_250dp"
                  xmlns:android="http://schemas.android.com/apk/res/android">
                    <android.support.v4.view.ViewPager android:layout_gravity="center" android:id="@id/shoutu_vp_photo" android:clipChildren="false" android:layout_width="@dimen/dimen_130dp" android:layout_height="wrap_content" />
                    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="bottom|center" android:orientation="horizontal" android:id="@id/shoutu_ll_points" android:layout_width="fill_parent" android:layout_height="wrap_content" />
                </FrameLayout>
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:padding="@dimen/dimen_10dp" android:layout_width="fill_parent" android:layout_height="wrap_content">
