                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/shoutu_ll_qzone" android:background="@drawable/btn_deep_yellow_click" android:padding="@dimen/dimen_5dp" android:layout_width="@dimen/dimen_0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_5dp" android:layout_weight="1.0">
                        <ImageView android:layout_width="@dimen/dimen_25dp" android:layout_height="@dimen/dimen_25dp" android:layout_marginBottom="@dimen/dimen_5dp" android:src="@drawable/share_qzone" />
                        <TextView android:textColor="@color/white" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="QQ空间" />
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/shoutu_ll_weixin" android:background="@drawable/btn_green_click" android:padding="@dimen/dimen_5dp" android:layout_width="@dimen/dimen_0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_5dp" android:layout_weight="1.0">
                        <ImageView android:layout_width="@dimen/dimen_25dp" android:layout_height="@dimen/dimen_25dp" android:layout_marginBottom="@dimen/dimen_5dp" android:src="@drawable/share_weixin" />
                        <TextView android:textColor="@color/white" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="微信好友" />
                    </LinearLayout>
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/shoutu_ll_circle" android:background="@drawable/btn_purple_click" android:padding="@dimen/dimen_5dp" android:layout_width="@dimen/dimen_0dp" android:layout_height="wrap_content" android:layout_weight="1.0">
                        <ImageView android:layout_width="@dimen/dimen_25dp" android:layout_height="@dimen/dimen_25dp" android:layout_marginBottom="@dimen/dimen_5dp" android:src="@drawable/share_pyq" />
                        <TextView android:textColor="@color/white" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="朋友圈" />
                    </LinearLayout>
                </LinearLayout>
                <TextView android:textSize="@dimen/dimen_12dp" android:gravity="center" android:padding="@dimen/dimen_10dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="方法三：点击复制下图连接到各大平台招收徒弟" />
                <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@id/shoutu_ll_copy" android:background="@drawable/btn_yellow_bg" android:padding="@dimen/dimen_8dp" android:layout_width="@dimen/dimen_310dp" android:layout_height="wrap_content">
                    <TextView android:textColor="@color/zdy_red1" android:gravity="center" android:id="@id/shoutu_ll_link" android:background="@drawable/line_white_bg" android:paddingTop="@dimen/dimen_5dp" android:paddingBottom="@dimen/dimen_5dp" android:layout_width="@dimen/dimen_0dp" android:layout_height="wrap_content" android:layout_marginRight="@dimen/dimen_10dp" android:layout_weight="1.0" />
                    <ImageView android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_30dp" android:src="@drawable/share_redbag" />
                </LinearLayout>
            </LinearLayout>
            <ProgressBar android:id="@id/shoutu_pb_wait" android:visibility="gone" android:layout_width="@dimen/dimen_30dp" android:layout_height="@dimen/dimen_30dp" android:layout_marginTop="@dimen/dimen_200dp" android:indeterminateDuration="2000" android:layout_centerHorizontal="true" style="@style/mProgress_circle" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>